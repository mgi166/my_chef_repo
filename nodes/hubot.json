{
    "run_list": [
        "emacs",
        "selinux::disabled",
        "ruby_build",
        "rbenv::user",
        "services",
        "user",
        "nodejs",
        "redisio::install",
        "npm",
        "app"
    ],
    "rbenv": {
        "user_installs": [
            {
                "user": "mgi",
                "rubies": ["2.1.2"],
                "global": "2.1.2",
                "gems": {
                    "2.1.2" : [
                        { "name": "bundler", "version": "1.6.4" }
                    ]
                }
            }
        ]
    },
    "redisio" : {
        "servers" : [
            {"name" : "master", "port" : "6379", "unixsocket" : "/tmp/redis.sock", "unixsocketperm" : "755"}
        ]
    }
}
